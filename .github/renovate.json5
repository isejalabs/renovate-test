{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:best-practices',
    ':disableRateLimiting',
    'github>ppat/homelab-ops-kubernetes-apps//.github/renovate/version-scheme',
    ':semanticCommitScope(package)',
  ],
  rebaseWhen: 'conflicted',
  assignees: [
    'sebiklamar',
  ],
  ignorePaths: [
    '_attic/**',
  ],
  terragrunt: {
    versioning: 'regex:^((?<compatibility>.*)-v|v*)(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)$',
  },
  additionalBranchPrefix: '{{packageFileDir}}/',
  prBodyColumns: [
    'Package',
    'Package file',
    'Update',
    'Change',
  ],
  kustomize: {
    managerFilePatterns: [
      '/(^|/)kustomization\\.ya?ml(\\.j2)?$/',
    ],
  },
  kubernetes: {
    managerFilePatterns: [
      '/(^|/)k8s/.+\\.yaml$/',
      '/(^|/)regex/.+\\.yaml$/',
      '/(^|/)vanilla/.+\\.yaml$/',
    ],
  },
  customManagers: [
    {
      customType: 'regex',
      managerFilePatterns: [
        '/\\.hcl$/',
        '/\\.tf$/',
        '/\\.tftpl$/',
        '/\\.yaml$/',
        '/\\.sh$/',
      ],
      matchStrings: [
        '(?<currentValue>[\\w+\\.\\-]*)[\'",;]*\\s*#\\s?renovate: (?<datasource>\\S+)=(?<depName>\\S+)\\s?(registry=(?<registryUrl>\\S+))?\\s?(versioning=(?<versioning>\\S+))?',
      ],
    },
  ],
  packageRules: [
    {
      matchPackageNames: [
        'docker.io/mongo',
      ],
      allowedVersions: '<=8',
      description: 'keep mongodb at v8 due to unifi-network-controller',
    },
    {
      matchPackageNames: [
        'lscr.io/linuxserver/openssh-server',
      ],
      versioning: 'regex:^(?<major>\\d+)\\.(?<minor>\\d+)_p(?<patch>\\d+)-r(?<build>\\d)-ls(?<revision>.+)$',
    },
    {
      matchPackageNames: [
        '/^lscr.io\\/linuxserver\\/unifi-network-application\\//',
      ],
      versioning: 'regex:^(?<compatibility>[a-z]*-|v)?(?<major>\\d+)\\.(?<minor>d+)\\.(?<patch>\\d+)?(?:[\\.-]?(?<build>.*))?$',
    },
    {
      matchUpdateTypes: [
        'minor',
        'patch',
        'pin',
        'digest',
        'pinDigest',
      ],
      automerge: true,
    },
    {
      matchDepTypes: [
        'devDependencies',
      ],
      automerge: true,
    },
  ],
  platformAutomerge: true,
}
